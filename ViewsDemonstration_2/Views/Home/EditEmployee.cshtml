@model ViewsDemonstration_2.Models.Employee

@{
    ViewBag.Title = "EditEmployee";
}

<h2>Welcome to EditEmployee Screen...</h2>
@using (Html.BeginForm())
{
    <p>
        <label>Employee Name : @Html.TextBoxFor(e=>e.Name)</label>
    </p>
    <p>
        <label>Employee Location : @Html.TextBoxFor(e => e.Location)</label>
    </p>
